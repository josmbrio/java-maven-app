#!/usr/bin/env groovy

pipeline {
        agent any
        tools {
            maven 'maven-3.8.6'   // Con esto maven estara disponible en todo el pipeline.
                            // El nombre debe ser igual al nombre configurado en la Configuracion Global de Jenkins
        }
        stages {
            stage("build app") {
                steps {
                    script {
                        echo "building the application"
                        sh 'mvn package'
                    }
                }
            }
            stage("build image") {
                steps {
                    script {
                        echo "building the application"
                        withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                            sh 'docker build -t josmbrio/my-repo:jma-2.0 .'
                            sh "echo $PASS | docker login -u $USER --password-stdin"
                            sh "docker push josmbrio/my-repo:jma-2.0"
                        }
                    }
                }
            }
            stage("deploy") {
                steps {
                    script {
                        echo 'deploying the application...'
                    }
                }
            }
        }
}
